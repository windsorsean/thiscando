{
    "debug": true,
    "source": "local",
    "admin_auth_code": "AdminSecretCode",
    "handlers": [
        {
            "name": "Add Config",
            "match": {
                "path": "/addconfig",
                "body": {
                    "name": "*",
                    "match": "*",
                    "function": "*"
                }
            },
            "function": "addConfig",
            "admin": true
        },
        {
            "name": "Load Config",
            "match": {
                "path": "/loadconfig",
                "body": {
                    "function": "*"
                }
            },
            "function": "loadConfig",
            "admin": true
        },
        {
            "name": "Add Handler",
            "match": {
                "path": "/addhandler",
                "body": {
                    "code": "*",
                    "name": "*"
                }
            },
            "function": "addHandler",
            "admin": true
        },
        {
            "name": "Load Handler",
            "match": {
                "path": "/loadhandler",
                "body": {
                    "name": "*"
                }
            },
            "function": "loadHandler",
            "admin": true
        },
        {
            "name": "List Handlers",
            "match": {
                "path": "/listhandlers",
                "body": {}
            },
            "function": "listHandlers",
            "admin": true
        },
        {
            "name": "Get Handler Template",
            "match": {
                "path": "/gethandlertemplate",
                "body": {}
            },
            "function": "getHandlerTemplate",
            "admin": true
        },
        {
            "name": "Get Config Template",
            "match": {
                "path": "/getconfigtemplate",
                "body": {}
            },
            "function": "getConfigTemplate",
            "admin": true
        },
        {
            "name": "Delete Handler Config",
            "match": {
                "path": "/deleteconfig",
                "body": {
                    "name": "*"
                }
            },
            "function": "deleteConfig",
            "admin": true
        },
        {
            "name": "Delete Handler",
            "match": {
                "path": "/deletehandler",
                "body": {
                    "name": "*"
                }
            },
            "function": "deleteHandler",
            "admin": true
        },
        {
            "name": "Hello World",
            "match": {
                "path": "/helloworld/*",
                "params": { "data":  "*" }
            },
            "function": "helloWorld",
            "vars": {
                "animals": ["dog", "cat"]
            }
        }
    ]
}